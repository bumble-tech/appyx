<resources>
    <!-- Base application theme. -->
    <style name="Theme.Appyx" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appyx_yellow2</item>
        <item name="colorPrimaryVariant">@color/appyx_yellow1</item>
        <item name="colorOnPrimary">@color/appyx_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appyx_dark</item>
        <item name="colorSecondaryVariant">@color/appyx_dark</item>
        <item name="colorOnSecondary">@color/appyx_bright</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Appyx.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Appyx.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background -->
        <item name="windowSplashScreenBackground">@color/appyx_bright</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Appyx.NoActionBar</item>
    </style>
</resources>
